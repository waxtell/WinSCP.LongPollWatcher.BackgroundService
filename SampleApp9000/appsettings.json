{
  "SessionOptions": {
    "UserName": "<your ftp username>",
    "Password": "<your ftp password>",
    "HostName": "localhost",
    "Protocol": "Ftp" 
  },
  "LongPollOptions": {
    "SleepIntervalMilliseconds": 10000,
    "RemotePath": "/",
    "SessionExecutablePath": "<absolute path to your winscp executable>\\WinSCP.exe",
    "Mask": "*.*",
    "IncludeSubdirectories": true
  }
}
